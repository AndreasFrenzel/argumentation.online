layout: layouts/base.njk
templateClass: tmpl-post
---
<h1>{{ title }}</h1>

<p>{% for auth in author %}{{ auth.name }}{% if not loop.last %}, {% endif %}{% endfor %}; {{ date | readableDate }} <a rel="license" href="http://creativecommons.org/licenses/by-nc/4.0/"><img alt="Creative Commons License" style="border-width:0; height:1em; margin-left:6px; margin-right:6px" src="{{ '/img/by-nc.png' | url}}" /></a> [<a href="{{ '/pdfs/' | url }}{{ id }}.pdf">PDF</a>]<br/>    
    {% for tag in tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
</p>

<p class="abstract"> {{ abstract  }} </p>


{{ content | safe }}

